<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>

<BorderPane prefHeight="-1.0" prefWidth="-1.0" stylesheets="@../css/styles.css"
	xmlns:fx="http://javafx.com/fxml/1" fx:id="formPane">
	
	<padding>
		<Insets bottom="15.0" left="12.0" right="15.0" top="12.0" />
    </padding>
    
    <top>
    	<TilePane orientation="HORIZONTAL" hgap="20.0" alignment="CENTER" styleClass="header">
    		<Label text="Click element to display add form" />
    		<ComboBox fx:id="elements" onAction="#displayForm"></ComboBox>
    	</TilePane>	
    	
    </top>
    
	<bottom>
		<TilePane orientation="HORIZONTAL" alignment="CENTER" styleClass="header">
			<Button text="Add element to list" onAction="#addElement" />
		</TilePane>	
	</bottom>
	
</BorderPane>

